<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>nl.vpro.poms</groupId>
    <artifactId>poms-parent</artifactId>
    <version>5.4.2</version>
  </parent>

  <groupId>nl.vpro.api-client</groupId>
  <artifactId>api-client-parent</artifactId>
  <version>5.4.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <description>Clients for NPO API's</description>

  <modules>
    <!--
    <module>api-client-scripts</module>
    -->
    <module>client-core</module>
    <module>client-resteasy</module>
    <module>client-utils</module>
    <module>media-backend-rs-client</module>
  </modules>

  <scm>
    <connection>scm:svn:https://subversion.vpro.nl/repo/nl/vpro/api-clients/branches/REL-5.4-SNAPSHOT</connection>
    <developerConnection>scm:svn:https://subversion.vpro.nl/repo/nl/vpro/api-clients/branches/REL-5.4-SNAPSHOT</developerConnection>
    <url>https://subversion.vpro.nl/viewvc/nl/vpro/api-clients/branches/REL-5.4-SNAPSHOT</url>
  </scm>

  <properties>
    <poms.shared.version>5.4.0</poms.shared.version>

    <!-- TODO: dependency should be dropped -->
    <pages.version>5.4.0</pages.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>nl.vpro.api-client</groupId>
        <artifactId>client-resteasy</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>nl.vpro.api-client</groupId>
        <artifactId>client-core</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.easytesting</groupId>
      <artifactId>fest-assert</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <id>vpro</id>
      <url>https://nexus.vpro.nl/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>vpro</id>
      <url>https://nexus.vpro.nl/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>
