<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>nl.vpro.poms</groupId>
    <artifactId>poms-parent</artifactId>
    <version>5.9.1</version>
  </parent>

  <groupId>nl.vpro.api-client</groupId>
  <artifactId>api-client-parent</artifactId>
  <version>5.9.2-SNAPSHOT</version>
  <packaging>pom</packaging>
  <description>Clients for NPO API's</description>

  <modules>
    <!--
    <module>api-client-scripts</module>
    -->
    <module>client-core</module>
    <module>client-resteasy</module>
    <module>client-utils</module>
    <module>media-backend-rs-client</module>
  </modules>

  <scm>
    <connection>scm:svn:https://subversion.vpro.nl/repo/nl/vpro/api-clients/branches/REL-5.9-SNAPSHOT</connection>
    <developerConnection>scm:svn:https://subversion.vpro.nl/repo/nl/vpro/api-clients/branches/REL-5.9-SNAPSHOT</developerConnection>
    <url>https://subversion.vpro.nl/viewvc/nl/vpro/api-clients/branches/REL-5.9-SNAPSHOT</url>
  </scm>

  <properties>
    <poms.shared.version>5.9.2</poms.shared.version>
    <resteasy.version>3.6.2.Final</resteasy.version>

   </properties>

  <build>
     <plugins>
       <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>write-project-properties</goal>
            </goals>
            <configuration>
              <outputFile>${project.build.outputDirectory}/maven.properties</outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>nl.vpro.api-client</groupId>
        <artifactId>client-resteasy</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>nl.vpro.api-client</groupId>
        <artifactId>client-core</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <id>vpro</id>
      <url>https://nexus.vpro.nl/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>vpro</id>
      <url>https://nexus.vpro.nl/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>
</project>
